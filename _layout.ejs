<% var path = current.path; %>
<% path.pop(); %>
<% path = path.join("/"); %>
<!doctype html>
<html class="no-js" lang="en">
<head>
    <%- partial("_includes/common_head", {"path": path}) %>
    <link rel="stylesheet" href="/stylesheets/mastodon-timeline.css">
</head>
<body>

  <div class="header">
      <%- partial("_includes/header") %>
  </div>
  
  <% if(public.posts._data[path]) { -%>
    <%- partial("/_post", {"path": path}) %>
  <% } else { -%>
      <%- yield %>
  <% } -%>

  <footer>
    <div class="container">
      <%- partial("_includes/footer") %>
    </div>
  </footer>
  <% if(environment == "production") { -%>
  <script async defer data-website-id="3d6cdd31-79bc-47e1-b00b-612e57f1a61a" src="https://umami.heathanderson.net/umami.js"></script>
  <% } %>
</body>
</html>
