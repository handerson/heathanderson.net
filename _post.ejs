<div id="layout" class="pure-g">
    <div class="content pure-u-1">
        <section class="post">
            <header class="post-header">
                <h1 class="post-title" title="<%= public.posts._data[path].title %>"><%= public.posts._data[path].title %></h1>

                <p class="post-meta">
                    <%-partial("_includes/date", {"date": public.posts._data[path].date})%>
                </p>
            </header>

            <div class="post-description">
                <%- yield %>
            </div>
        </section>
        </div>
    </div>
</div>

<%- partial("_includes/pagination", {"path": path}) %>
